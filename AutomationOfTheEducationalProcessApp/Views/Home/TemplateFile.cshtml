@using contracts.view_moedels
@{
    ViewData["Title"] = "TemplateFile";
}
@model template_view_model

<div class="text-center">
    <h1 class="display-4">Шаблон инд. плана преподавателя</h1>
</div>

<div class="text-md-center">
	<input id="id" type="hidden" name="id" readonly value="@Model.id" />
</div>
<div class="row">
	<div class="col-4">Имя файла:</div>
	<div class="col-8"><input type="text" name="name" value="@Model.name" readonly /></div>
</div>
<div class="row">
	<div class="col-4">Автор:</div>
	<div class="col-8"><input type="text" name="user" value="@Model.author_name" readonly /></div>
</div>
<div class="row">
	<div class="col-4">Документ:</div>
	<div class="col-8"><input type="text" name="document" value="@Model.document_type" readonly /></div>
</div>
@using (Html.BeginForm("TemplateFile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	<input type="file" name="uploads" />
	<br>
	<input class="btn btn-success" type="submit" value="Загрузить" />
}

