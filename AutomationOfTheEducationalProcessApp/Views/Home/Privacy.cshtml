@using contracts.view_moedels
@{
    ViewData["Title"] = "Privacy Policy";
}
@model user_view_model;

<h1>Личные данные</h1>
<form method="post">
	<div class="row">
		<div class="col-4">Почта:</div>
		<div class="col-8"><input type="email" name="email" value="@Model.email" /></div>
	</div>
	<div class="row">
		<div class="col-4">Пароль:</div>
		<div class="col-8"><input type="password" name="password" value="@Model.password" /></div>
	</div>
	<div class="row">
		<div class="col-4">ФИО:</div>
		<div class="col-8"><input type="text" name="fio" value="@Model.fio" readonly/></div>
	</div>
	<div class="row">
		<div class="col-4">Кафедра:</div>
		<div class="col-8"><input type="text" name="department" value="@Model.department_name" readonly/></div>
	</div>
	<div class="row">
		<div class="col-4">Дата рождения:</div>
		<div class="col-8"><input type="text" name="yearOfBirth" value="@Model.year_of_birth" readonly /></div>
	</div>
	<div class="row">
		<div class="col-4">Должность:</div>
		<div class="col-8"><input type="text" name="position" value="@Model.position" readonly /></div>
	</div>
	<div class="row">
		<div class="col-4">Ученая степень:</div>
		<div class="col-8"><input type="text" name="academicDegree" value="@Model.academic_degree" readonly /></div>
	</div>
	<div class="row">
		<div class="col-4">Год присуждения:</div>
		<div class="col-8"><input type="text" name="academicDegree" value="@Model.year_of_award_ad" readonly /></div>
	</div>
	<div class="row">
		<div class="col-4">Ученое звание:</div>
		<div class="col-8"><input type="text" name="academicDegree" value="@Model.academic_title" readonly /></div>
	</div>
	<div class="row">
		<div class="col-4">Год пр:</div>
		<div class="col-8"><input type="text" name="academicDegree" value="@Model.year_of_award_at" readonly /></div>
	</div>
	<div class="row">
		<div class="col-8"></div>
		<div class="col-4"><input type="submit" value="Сохранить" class="btn btn-primary" /></div>
	</div>
</form>
